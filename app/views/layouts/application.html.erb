<!DOCTYPE html>
<html>
<head>
	<title>HD Seattle</title>
	<script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
	<link href="http://maxcdn.bootstrapcdn.com/bootswatch/3.3.1/yeti/bootstrap.min.css" rel="stylesheet">
	<link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>

	<meta content="width=device-width, initial-scale=1, maximum-scale=1 user-scalable=no" name="viewport">
</head>
<body>

	<% if params[:controller] == "devise/sessions" %>
	<% elsif params[:controller] == "devise/passwords" %>
	<% elsif params[:controller] == "devise/invitations" %>
	<% else %>
		<div style="padding-bottom:45px">
			<%= render 'layouts/header' %>
		</div>
	<% end %>
	<% flash.each do |key, value| %>
	<%= content_tag(:div, value, class: "alert alert-info", role: "alert") %>
	<% end %>
	<%= yield %>

	<% if params[:controller] == "devise/sessions" %>
	<% elsif params[:controller] == "devise/passwords" %>
	<% elsif params[:controller] == "devise/invitations" %>
	<% elsif params[:controller] == "static_pages" && params[:action] == "home" %>
	<% else %>
		<%= render 'layouts/footer' %>
	<% end %>

	<%= debug(params) if Rails.env.development? %>

</body>
</html>
