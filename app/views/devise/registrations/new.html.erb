<%= render 'shared/userstyle' %>
<div class="site-wrapper">
  <div class="site-wrapper-inner">
        <div class="cover-container">

          <div class="inner cover">


        <h2><%= image_tag('blocks.png', :width => 43, :height => 43, :style => "margin:0px").to_s %> Sign up</h2>

        <%= form_for(resource, :as => resource_name, :html => {class:"form-signin"}, :url => registration_path(resource_name)) do |f| %>
          <p><%= devise_error_messages! %></p>
          <div><%= f.text_field :first_name, :autofocus => true, :placeholder => "First Name", :class => "form-control",
          style: "border-top-left-radius: 7px; border-top-right-radius: 7px;" %></div>
          <div><%= f.text_field :last_name, :placeholder => "Last Name", :class => "form-control" %></div>
          <div><%= f.email_field :email, :placeholder => "Email Address", :class => "form-control" %></div>
          <div><%= f.password_field :password, :placeholder => "Password", :class => "form-control", autocomplete: "off" %></div>
          <div><%= f.password_field :password_confirmation, :placeholder => "Password Confirmation", :class => "form-control", autocomplete: "off" %></div>
          <div style="background:darkgrey;border-bottom-left-radius: 7px; border-bottom-right-radius: 7px;">
            <div><%= f.label :image %> <i>(Profile Picture)</i><br />
            <%= f.file_field :image %></div>
            <br>
          </div>
          <br>
          <%= f.submit "Sign up", class: "btn btn-lg btn-primary", id: "submitbtn" %>
        <% end %>


          <p><%= render "devise/shared/links" %></p>
          </div>
        </div>
    </div>
</div>
