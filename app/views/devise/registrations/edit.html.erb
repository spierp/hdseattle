<%= render 'shared/userstyle' %>

<div class="site-wrapper">
  <div class="site-wrapper-inner">
        <div class="cover-container">
          <div class="inner cover">
        <h2><%= image_tag('blocks.png', :width => 43, :height => 43, :style => "margin:0px").to_s %> Edit Settings</h2>
        <%= form_for(resource, as: resource_name, :html => {class:"form-signin", autocomplete:"off"}, url: registration_path(resource_name)) do |f| %>
          <p><%= devise_error_messages! %></p>
          <div><%= f.text_field :first_name, :autofocus => true, :class => "form-control", :autocomplete => "on",
          style: "border-top-left-radius: 7px; border-top-right-radius: 7px;" %></div>
          <div><%= f.text_field :last_name, :class => "form-control" %></div>
          <div><%= f.email_field :email, :placeholder => "Email Address", :class => "form-control" %></div>
          <div><%= f.password_field :password, :placeholder => "New Password", :class => "form-control", :autocomplete => "off" %></div>
          <div><%= f.password_field :password_confirmation, :placeholder => "New Password Confirmation", :class => "form-control", :autocomplete => "off" %></div>
          <div><%= f.password_field :current_password, :placeholder => "Current Password", :class => "form-control" %></div>
          <div style="background:darkgrey; border-bottom-left-radius: 7px; border-bottom-right-radius: 7px;">
              <%= f.label :image %> <i>(Profile Picture)</i><br />
              <%#= image_tag(current_user.image_url(:medium), :width => 125, :height => 125, :style => "background:lightgray; padding:2px;margin-bottom:10px").to_s %><br>
              <%= f.file_field :image %>
              <br>
          </div>
          <br>
          <div id="loading">
              <div id="loadingcontent">
                  <p id="loadingspinner">
                      Updating...
                  </p>
              </div>
          </div>
        <%= f.submit "Update", class: "btn btn-lg btn-primary", id: "submitbtn" %>
        <% end %>
          <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
      <%= link_to "Back", :back %>
          </div>
        </div>
    </div>
</div>

<%= render 'shared/spinner' %>
