<script>
function initialize() {
  var myLatlng = new google.maps.LatLng(47.623354,-122.330112);
  var mapOptions = {
    zoom: 14,
    scrollwheel: false,
    draggable: false,
    center: myLatlng
  };

  var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

  var contentString =
  '<div id="content">'+
    '<div id="siteNotice">'+
    '</div>'+
    '<div id="bodyContent">'+
      '<p><b>Hathaway Dinwiddie Construction Company</b><br>' +
      '500 Yale Avenue North<br>'+
      'Seattle, WA 98109</p>'+
    '</div>'+
  '</div>';

  var infowindow = new google.maps.InfoWindow({
    content: contentString
  });

  var marker = new google.maps.Marker({
    position: myLatlng,
    map: map,
    title: 'Hathaway Dinwiddie Construction Company'
  });
  google.maps.event.addListener(marker, 'click', function() {
    infowindow.open(map,marker);
  });
}

google.maps.event.addDomListener(window, 'load', initialize);
</script>

