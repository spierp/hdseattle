 */

/* Links */
a,
a:focus,
a:hover {
  color: #fff;
}


/*
 * Base structure
 */

html,
body {
  height: 100%;
  background-color: #000;
  background-image:   radial-gradient(at 0 bottom,rgba(90, 114, 145, 0.7) 0,rgba(73, 83, 101, 0) 60%),
                      radial-gradient(at 90% bottom,#2e3742 0,rgba(52, 59, 71, 0) 40%),
